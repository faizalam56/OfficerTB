<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zmq.com.fragment.AssignComplianceFragment">


    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">


        <LinearLayout

            android:id="@+id/linear2"
            android:padding="10dp"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_patient_details"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patient Details:" />

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txt_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/txt_prmnt_reg_name" />

                        <EditText

                            android:enabled="false"
                            android:id="@+id/edt_p_name1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dip"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="text"
                            android:maxLines="1" >

                        </EditText>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txt_2"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_prmnt_reg_sex" />

                        <EditText
                            android:enabled="false"
                            android:id="@+id/edt_p_sex1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dip"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="text"
                            android:maxLines="1" >

                        </EditText>

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txt_3"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_prmnt_reg_age" />

                        <EditText
                            android:enabled="false"
                            android:id="@+id/edt_p_age1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dip"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="text"
                            android:maxLines="1" >

                        </EditText>

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txt_4"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_prmnt_reg_p_type" />

                        <EditText
                            android:enabled="false"
                            android:id="@+id/edt_p_type1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dip"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="text"
                            android:maxLines="1" >

                        </EditText>

                    </TableRow>


                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txt_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/txt_prmnt_reg_date" />

                        <EditText
                            android:id="@+id/edt_reg_date1"
                            android:enabled="false"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dip"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:maxLines="1">

                        </EditText>
                    </TableRow>

                    <TextView
                        android:id="@+id/txt_Dots_planner"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dots Planner:" />

                    <TableRow
                        android:id="@+id/tableRow6"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txt_6"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_assign_comp_method" />

                        <Spinner
                            android:id="@+id/spinner_comp_method"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:dropDownWidth="wrap_content"
                            android:entries="@array/compliance_method"
                            android:maxLines="1" >
                        </Spinner>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow7"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txt_7"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_assign_comp_dots_days" />

                        <Spinner
                            android:id="@+id/spinner_dots_days"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:dropDownWidth="wrap_content"
                            android:entries="@array/dot_days"
                            android:maxLines="1" >
                        </Spinner>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow8"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/txt_8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"

                            android:text="@string/txt_assign_comp_dos_start_date" />

                        <TextView
                            android:id="@+id/txt_dose_start_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <Button
                            android:id="@+id/btn_dose_start_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_weight=".5"
                            android:background="@android:drawable/ic_menu_today" />
                    </TableRow>

                    <Button
                        android:layout_marginTop="30dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_assign_comp"
                        android:id="@+id/btn_mophi_assign_comp"
                        android:background="@color/colorMOPHIPrimary"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"/>
                </TableLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
